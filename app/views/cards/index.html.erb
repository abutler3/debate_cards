<h1>Listing cards</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Author</th>
    <th>Date</th>
    <th>Evidence</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.tag %></td>
    <td><%= card.author %></td>
    <td><%= card.date %></td>
    <td><%= card.evidence %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

